/* miniprogram/pages/index/index.wxss */
.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 30px;
}

.register-section, .verify-section {
  width: 100%;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
  width: 80%;
}

.input-group text {
  margin-right: 10px;
}

.input-id {
  border: 1px solid #ccc;
  padding: 5px;
  flex: 1;
  border-radius: 4px;
}

.divider {
  width: 100%;
  height: 1px;
  background-color: #eee;
  margin: 20px 0;
}

.result-area {
  margin-top: 30px;
  padding: 15px;
  background-color: #f8f8f8;
  border-radius: 5px;
  width: 90%;
  text-align: center;
}

.result-text {
  font-size: 16px;
  color: #333;
}
